{% extends 'base.html.twig' %}

{% block body %}

    <div class="menu">

        <h1>{{ user.username }}</h1>

        <form action="{{ path('saveprofile') }}" method="post">
            <div class="form-group">
                <label>Identifiant</label>
                <input type="text" class="form-control" placeholder="{{ user.username }}" name="username">
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" class="form-control" placeholder="Mot de passe" name="password">
            </div>
            <button type="submit" class="btn btn-outline-primary">Enregistrer les modifications</button>
        </form>

        <a href="{{ path('monprofil') }}"><button type="button" class="btn btn-outline-primary">Mon profil</button></a>

    </div>

{% endblock %}