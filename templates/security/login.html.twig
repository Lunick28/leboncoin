{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="menu">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="inputUsername" class="sr-only">L'machin avec l'arobaz là</label>
                <input type="text" class="form-control" id="inputUsername" placeholder="c'est ici qu'tu met l'truc" name="username">
            </div>
            <div class="form-group">
                <label for="inputPassword1" class="sr-only">Bidule secret</label>
                <input type="password" class="form-control" id="inputPassword1" placeholder="ton mot secret t'sais" name="password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button type="submit" class="btn btn-outline-primary">Vérifie qu'c'est bon avec l'Didier</button>

        </form>

    </div>
{% endblock %}
