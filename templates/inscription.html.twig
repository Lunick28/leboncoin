{% extends 'base.html.twig' %}

{% block body %}

    <div class="menu">

        <h1>{{ title }}</h1>

        <form action="{{ path('inscription_en_cours') }}" method="post">
            <div class="form-group">
                <label for="inputPseudo">L'nom qu'on t'donne</label>
                <input type="text" class="form-control" id="inputPseudo" placeholder="c'est ici qu't'écris ton nom hein" name="username">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">T'sais c'est l'adresse machin-truc là, l'adresse mail</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="C'est ici qu't'écris avec l'arobaz là" name="email">
                <small id="emailHelp" class="form-text text-muted">On ne donnera pas ton mail à la Ginette tkt</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mot de passe secret</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="c'est ici qui faut qu'tu mettes le mot secret qu'il faut pas dire" name="password">
            </div>
           <button type="submit" class="btn btn-outline-primary">Envoi le tout au Didier</button>
        </form>
    </div>

{% endblock %}