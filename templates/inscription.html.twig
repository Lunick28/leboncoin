{% extends 'base.html.twig' %}

{% block body %}

    <div class="menu">

        <h1>{{ title }}</h1>

        <form action="{{ path('inscription_en_cours') }}" method="post">
            <div class="form-group">
                <label for="inputPseudo">Pseudo</label>
                <input type="text" class="form-control" id="inputPseudo" placeholder="Pseudo" name="username">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Adresse email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adresse email" name="email">
                <small id="emailHelp" class="form-text text-muted">On ne divulguera jamais votre email. tkt.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mot de Passe</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe" name="password">
            </div>
           <button type="submit" class="btn btn-outline-primary">Confirmer</button>
        </form>
    </div>

{% endblock %}