{% extends 'base.html.twig' %}

{% block body %}

    <div>

        <div class="boutonhome">
            <a href="{{ path('home') }}"><button type="button" class="btn btn-outline-primary">Acceuil</button></a>
        </div>

        <div class="titre">
            <h1>Annonces</h1>
        </div>

        {% for annonce in annonces | reverse %}
            <div class="annonce">
                </br>
                <h5>{{ annonce.name }}</h5>
                <p>Prix : {{ annonce.price }} €</p>
                <p>Catégorie : <a href="{{ path('annonce', {category: annonce.category}) }}">{{ annonce.category }}</a></p>
                <p>Description : {{ annonce.description }}</p>
                <p>par <a href="{{ path('user', {username: annonce.user.username}) }}">{{ annonce.user.username }}</a></p>
            </div>
        {% endfor %}



    </div>

{% endblock %}